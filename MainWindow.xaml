<Window x:Class="Kristofides.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kristofides" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu>
            <MenuItem Header="Working database">
                <MenuItem Header="New database" Click="MenuItemNewDatabase_Click"></MenuItem>
                <MenuItem Header="Open existing database" Click="MenuItemOpenDatabase_Click"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit"  Click="MenuItemExit_Click"></MenuItem>
            </MenuItem>
            <MenuItem Name="ResearchMenuItem" Header="Research" IsEnabled="False">
                <MenuItem Name="GraphMenuItem" Header="Graph" IsEnabled="False">
                    <MenuItem Name="NewGraphMenuItem" Header="New graph"></MenuItem>
                    <MenuItem Name="OpenNewGraphMenuItem" Header="Open graph"></MenuItem>
                    <MenuItem Name="SaveGraphMenuItem" Header="Save graph"></MenuItem>
                </MenuItem>
                <MenuItem Header="New research" Click="MenuItemNewResearch_Click"></MenuItem>
                <MenuItem Header="Open research"></MenuItem>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Windows">
                    <MenuItem Header="Graph matrix"></MenuItem>
                    <MenuItem Header="Graph visualisation"></MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="About" Click="MenuItemAbout_Click">
            </MenuItem>
        </Menu>
        <Frame Grid.Row="1" HorizontalAlignment="Center" Name="MainContent" />
    </Grid>
</Window>
