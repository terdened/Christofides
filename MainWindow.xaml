<Window x:Class="Kristofides.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kristofides" Height="480" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Working database">
                <MenuItem Header="New database" Click="MenuItemNewDatabase_Click"></MenuItem>
                <MenuItem Header="Open existing database" Click="MenuItemOpenDatabase_Click"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit"  Click="MenuItemExit_Click"></MenuItem>
            </MenuItem>
            <MenuItem Name="ResearchMenuItem" Header="Research" IsEnabled="False">
                <MenuItem Header="Graph">
                    <MenuItem Header="New graph"></MenuItem>
                    <MenuItem Header="Open graph"></MenuItem>
                    <MenuItem Header="Save graph"></MenuItem>
                </MenuItem>
                <MenuItem Header="New research"></MenuItem>
                <MenuItem Header="Save research"></MenuItem>
                <MenuItem Header="Open research"></MenuItem>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Windows">
                    <MenuItem Header="Graph matrix"></MenuItem>
                    <MenuItem Header="Graph visualisation"></MenuItem>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="About" Click="MenuItemAbout_Click">
            </MenuItem>
        </Menu>
    </Grid>
</Window>
